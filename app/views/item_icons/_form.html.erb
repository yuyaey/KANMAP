<% if item_icon.errors.present? %>
  <ul id="error_explanation">
    <% item_icon.errors.full_messages.each do |message| %>
    <li> <%= message %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: item_icon, local: true do |f| %>
  <div class='form-group'>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', id: 'item_icon_name' %>
  </div>
  <div class='form-group'>
    <%= f.label :picture %>
    <%= f.file_field :picture, class: 'form-control', id: 'item_icon_picture' %>
  </div>
  <%= f.submit nil, class: 'btn btn-primary' %>
<% end %>
