<h1><%= image_tag(@item.item_icon.picture_url) %></h1>

<ul class='nav justify-content-end'>
  <%= link_to '一覧', items_path, class: 'nav-link' %>
</ul>

<table class= 'table table-hover'>
  <tbody>
    <tr>
      <th><%= Item.human_attribute_name(:id) %></th>
      <td><%= @item.id %></td>
    </tr>
    <tr>
      <th><%= Item.human_attribute_name(:name) %></th>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <th><%= Item.human_attribute_name(:memo) %></th>
      <td><%= auto_link(simple_format(h(@item.memo), {}, sanitize: false, wrapper_tag: "div")) %></td>
    <tr>
    <% if @item.image.present? %> 
    <tr>
      <th><%= Item.human_attribute_name(:image) %></th>
      <td><%= image_tag(@item.image_url)%></td>
    </tr>
    <% end %>
    <tr>
      <th><%= Kanzume.human_attribute_name(:name) %></th>
      <td><%= @item.kanzume.name %></td>
    </tr>
    <tr>
      <th><%= Item.human_attribute_name(:created_at) %></th>
      <td><%= @item.created_at %></td>
    </tr>
    <tr>
      <th><%= Item.human_attribute_name(:updated_at) %></th>
      <td><%= @item.updated_at %></td>
    </tr>
  </tbody>
</table>
