<h1>🥫</h1>
<%= search_form_for @q, class: 'mb-5' do |f| %>
  <div class="form-group row">
    <%= f.label :name_cont, '名称', class: 'col-sm-2 col-form-label'%>
    <div class="col-sm-10">
      <%= f.search_field :name_cont, class: 'form-control'%>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :created_at_gteq, '登録日時', class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.search_field :created_at_gteq, class: 'form-control'%>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-outline-primary' %>
  </div>
<% end %>
<%= link_to '🥫を追加', new_kanzume_icon_path, class: 'btn btn-primary' %>
<div class='mb-3'>
  <table class='table table-hover'>
    <thead class='thead thead-default'>
      <tr>
        <th></th>
        <th><%= sort_link(@q, :name) %></th>
        <th><%= sort_link(@q, :created_at) %></th>
      </tr>
      <tbody>
        <% @kanzume_icons.each do |kanzume_icon| %>
          <tr>
            <td><%= image_tag kanzume_icon.picture_url(:thumb) if kanzume_icon.picture.present? %></td>
            <td><%= link_to kanzume_icon.name, kanzume_icon %></td>
            <td><%= kanzume_icon.created_at %></td>
            <td><%= link_to '編集', edit_kanzume_icon_path(kanzume_icon), class: 'btn btn-primary mr-3' %></td>
            <td><%= link_to '×', kanzume_icon, method: :delete, remote: true, data: {confirm: "「#{kanzume_icon.name}」を削除します。よろしいですか？"}, class: 'btn-floating btn-small grey lighten-1' %></td>
          </tr>
        <% end %>
      </tbody>
    </thead>
  </table>
</div>
