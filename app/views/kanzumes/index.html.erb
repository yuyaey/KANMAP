<%= stylesheet_link_tag 'kanzumes', media: 'all'%>
<h3>KANZUME</h3>
<div class="row">
  <div class="col s4 m3">
    <div class="card">
      <div class="card-image">
        <img src="/assets/kb_blue.png" id="kanzume_img">
      </div>
      <div class="card-content" id="kanzume_content">
        <span class="card-title">TOKYO KANZUME</span>
        <a class='dropdown-trigger' href='#' data-target='dropdown1'><i class="material-icons teal-text right">more_vert</i></span></a>
        <p class="date">CREATED : 2018/09/12</p>
         <p class="date">UPDATED : 2018/09/12</p>
      <ul id='dropdown1' class='dropdown-content'>
        <li><a href="#!"><i class="material-icons">edit</i>EDIT</a></li>
        <li><a href="#!"><i class="material-icons text-grey">clear</i>DELETE</a></li> </ul>
      </div>
    </div>
 
</div>
</div>
<%= search_form_for @q, class: 'mb-5' do |f| %>
  <div class="form-group row">
    <%= f.label :name_cont, '名称', class: 'col-sm-2 col-form-label'%>
    <div class="col-sm-10">
      <%= f.search_field :name_cont, class: 'form-control'%>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :created_at_gteq, '登録日時', class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.search_field :created_at_gteq, class: 'form-control'%>
    </div>
  </div>
  <%= button_tag type: "submit", class: "btn" do%>
    <i class="material-icons">search</i>
  <% end %>
<% end %>
<div class='mb-3'>
  <table class='table table-hover'>
    <thead class='thead thead-default'>
      <tr>
        <th><%= sort_link(@q, :name) %></th>
        <th><%= sort_link(@q, :created_at) %></th>
      </tr>
      <tbody>
        <% @kanzumes.each do |kanzume| %>
          <tr>
            <td><%= link_to kanzume.name, kanzume %></td>
            <td><%= kanzume.created_at %></td>
            <td><%= link_to edit_kanzume_path(kanzume) do%>
                <i class="material-icons">edit</i>
              <% end %>
            </td>
            <td>
              <%= link_to '×', kanzume, method: :delete, data: {confirm: "「#{kanzume.name}」を削除します。よろしいですか？"}, class: 'btn-floating btn-small grey lighten-1' %></td>
          </tr>
        <% end %>
      </tbody>
    </thead>
  </table>
</div>
<script>
  $('.dropdown-trigger').dropdown();
</script>
