<% if kanzume.errors.present? %>
  <ul id="error_explanation">
    <% kanzume.errors.full_messages.each do |message| %>
      <li> <%= message %> </li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: kanzume, local: true do |f| %>
  <div class='form-group'>
    <%= f.label :name %>
    <%= f.text_field :name, required: true, class: 'form-control', id: 'kanzume_name' %>
  </div>
  <div class="form-group">
    <%= f.label 'Kanzumeを選択' %>
    <%= f.collection_select :kanzume_icon_id, KanzumeIcon.all, :id, :name, {include_blank: true}, {required: true} %>
  </div>
  <% unless params[:id] %>
    ここに位置情報フォームを追加
    <%= f.fields_for :maps do |m| %>
    <div>
      <%= m.label '位置情報を追加' %>
      <%= m.text_field :address, required: true%>
    </div>
    <% end %>
  <% else %>
  <% end %>
  <%= f.submit nil, class: 'btn btn-primary' %>
<% end %>
